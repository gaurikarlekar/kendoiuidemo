<div class="demo-section k-content">
    <ul id="fieldlist">
        <li>
            <label>PMP</label>
            @(Html.Kendo().Slider()
      .Name("slider")
      .Min(40)
      .Max(100)
      .SmallStep(1)
      .LargeStep(10)
      .Value(18)
      .Events(events => events
          .Slide("sliderSlide")
          .Change("sliderChange"))
      .HtmlAttributes(new { @class = "pmp" }))
        </li>
        <li>
            <label>PLC</label>
            @(Html.Kendo().Slider()
      .Name("slider1")
      .Min(40)
      .Max(100)
      .SmallStep(1)
      .LargeStep(10)
      .Events(events => events
          .Slide("sliderSlide")
          .Change("sliderChange"))
      .HtmlAttributes(new { @class = "plc" }))
        </li>
        <li>
            <label>SCADA</label>
            @(Html.Kendo().Slider()
      .Name("slider2")
      .Min(40)
      .Max(100)
      .SmallStep(1)
      .LargeStep(10)
      .Events(events => events
          .Slide("sliderSlide")
          .Change("sliderChange"))
      .HtmlAttributes(new { @class = "scada" }))
        </li>
    </ul>
</div>

